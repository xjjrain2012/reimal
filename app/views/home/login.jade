extends ../../../common/views/base
block styles
	link(rel="stylesheet", type="text/css", media="screen", href="/css/reimal.css")
block body
	body#extr-page.animated.fadeInDown
		header#header
			div#logo-group
				span#logo
					img(src="/img/logo.png", alt="SmartAdmin")
			span#extr-page-header-space
				span.hidden-mobile 还没有账户?
				a.btn.btn-danger(href="/users/register") 注册新账户
		div#main(role="main")
			div#content.container
				div.row
					div.col-xs-12.col-sm-12.col-md-4.col-lg-4.col-md-offset-4.col-lg-offset-4
						div.well.no-padding
							form#login-form.smart-form.client-form(name="loginForm", action="/users/login", method="post")
								header 登录会员管理系统
								fieldset
									section
										label.label 邮箱
										label.input
											i.icon-append.fa.fa-user
											input(name="user[email]", type="email", placeholder="邮箱")
											b.tooltip.tooltip-top-right 
												i.fa.fa-user.txt-color-teal
												| 请输入邮箱地址
									section
										label.label 密码
										label.input
											i.icon-append.fa.fa-lock
											input(name="user[password]", type="password", placeholder="密码")
											b.tooltip.tooltip-top-right 
												i.fa.fa-lock.txt-color-teal
												| 请输入密码
										.note
											a(href="/users/forgotpwd") 忘记密码？
										
									section
										label.checkbox
											input(type="checkbox", name="user[remember]", checked="")
											i
											| 保持登录
								footer
									button.btn.btn-primary(type="submit") 登录